# Limpia imágenes antiguas después de actualizar
WATCHTOWER_CLEANUP=true

# Intervalo de verificación en segundos (86400 = 24 horas)
WATCHTOWER_POLL_INTERVAL=86400

# Incluir contenedores detenidos
WATCHTOWER_INCLUDE_STOPPED=false

# URL de notificación (opcional, puede ser Slack, Email, etc.)
# WATCHTOWER_NOTIFICATION_URL=
